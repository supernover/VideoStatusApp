<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#151C25"
    tools:context=".SignUp">
    <ProgressBar
        android:id="@+id/pro"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:fontFamily="@font/loveloblack"
                    android:gravity="center"
                    android:textColor="@color/backtext"
                    android:textSize="30dp"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:padding="20dp">


                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="REGISTER"
                            android:textSize="25dp"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/montserrat_alternates"/>
                        <RelativeLayout
                            android:id="@+id/rvname"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_below="@+id/image"
                            android:layout_width="match_parent"
                            android:background="@drawable/loginedit"
                            android:layout_height="50dp">



                            <LinearLayout
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_marginTop="3dp"
                                    app:srcCompat="@drawable/user"
                                    android:padding="5dp"
                                    android:tint="#8F8C8C"
                                    android:id="@+id/user"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    />

                                <EditText
                                    android:layout_marginRight="7dp"
                                    android:id="@+id/idname"
                                    android:paddingLeft="15dp"
                                    android:hint="User Name"
                                    android:fontFamily="@font/nunito_semibold"

                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:inputType="textEmailAddress"
                                    android:layout_toRightOf="@+id/user"
                                    android:background="@color/logincard"
                                    android:textSize="15sp"/>

                            </LinearLayout>



                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rvemail"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_below="@+id/image"
                            android:layout_width="match_parent"
                            android:background="@drawable/loginedit"
                            android:layout_height="50dp">



                            <LinearLayout
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_marginTop="3dp"
                                    app:srcCompat="@drawable/mail"
                                    android:padding="5dp"
                                    android:tint="#8F8C8C"
                                    android:id="@+id/email"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    />

                                <EditText
                                    android:layout_marginRight="7dp"
                                    android:id="@+id/idemail"
                                    android:paddingLeft="15dp"
                                    android:hint="Email Id"
                                    android:fontFamily="@font/nunito_semibold"

                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:inputType="textEmailAddress"
                                    android:layout_toRightOf="@+id/user"
                                    android:background="@color/logincard"
                                    android:textSize="15sp"/>

                                <EditText
                                    android:id="@+id/idemail2"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_toRightOf="@+id/email"
                                    android:layout_weight="1"
                                    android:background="@color/edittext"
                                    android:fontFamily="@font/nunito_semibold"
                                    android:hint="Email Id"
                                    android:inputType="textEmailAddress"
                                    android:paddingLeft="15dp"
                                    android:textColor="@color/colormain"
                                    android:textSize="15sp" />

                            </LinearLayout>



                        </RelativeLayout>



                        <RelativeLayout
                            android:id="@+id/rvpass"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_below="@+id/image"
                            android:layout_width="match_parent"
                            android:background="@drawable/loginedit"
                            android:layout_height="50dp">



                            <LinearLayout
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_marginTop="3dp"
                                    app:srcCompat="@drawable/lock"
                                    android:padding="5dp"
                                    android:tint="#8F8C8C"
                                    android:id="@+id/pass"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    />

                                <EditText
                                    android:layout_marginRight="7dp"
                                    android:id="@+id/idpass"
                                    android:paddingLeft="15dp"
                                    android:hint="Password"
                                    android:fontFamily="@font/nunito_semibold"

                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:inputType="textEmailAddress"
                                    android:layout_toRightOf="@+id/user"
                                    android:background="@color/logincard"
                                    android:textSize="15sp"/>

                            </LinearLayout>



                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            >

                            <CheckBox
                                android:layout_marginLeft="20dp"
                                android:id="@+id/simpleCheckBox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/colormain"
                                android:text="Accept "/>

                            <TextView
                                android:id="@+id/idterms"
                                android:clickable="true"
                                android:gravity="center_vertical"
                                android:textColor="#415CF1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Terms and Condition"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp">

                            <Button
                                android:id="@+id/idsignup"
                                android:background="@drawable/singbt"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="35dp"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:textSize="15dp"
                                android:text="SIGN UP"/>
                        </LinearLayout>



                    </LinearLayout>






                </androidx.cardview.widget.CardView>




            </LinearLayout>







        </LinearLayout>



    </ScrollView>



</RelativeLayout>