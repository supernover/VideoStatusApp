<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#151C25"
    xmlns:app="http://schemas.android.com/apk/res-auto"
  >

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colormain">
        <TextView
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image Status"
            android:fontFamily="@font/nunito_bold"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:layout_centerVertical="true"/>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:gravity="center"
        android:layout_centerInParent="true"
        android:id="@+id/idadmob"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </RelativeLayout>

        <LinearLayout
            android:layout_margin="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_margin="@dimen/_4sdp"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5sdp"
                    >


                    <RelativeLayout
                        android:id="@+id/status_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:orientation="vertical">

                        <com.joooonho.SelectableRoundedImageView
                            android:id="@+id/statusimageView"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_200sdp"
                            android:scaleType="fitXY"
                            app:sriv_left_top_corner_radius="8dip"
                            app:sriv_right_top_corner_radius="8dip"
                            app:sriv_left_bottom_corner_radius="8dip"
                            app:sriv_right_bottom_corner_radius="8dip"
                            android:contentDescription="@string/StatusParsing"/>


                    </RelativeLayout>



                    <LinearLayout
                        android:padding="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/status_view"
                        android:gravity="center"
                        android:orientation="horizontal">





                        <LinearLayout
                            android:id="@+id/btn_share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageButton
                                android:id="@+id/img_btn_share"
                                android:tint="#807F7F"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:padding="@dimen/_4sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:background="@drawable/ic_share"
                                android:backgroundTint="#807F7F"/>

                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/btn_download"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/img_btn_download"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:padding="@dimen/_4sdp"
                                android:layout_marginRight="@dimen/_20sdp"
                                android:layout_marginLeft="@dimen/_20sdp"
                                android:background="@drawable/ic_dv"
                                android:backgroundTint="#807F7F"/>
                        </LinearLayout>


                    </LinearLayout>
                </RelativeLayout>





            </androidx.cardview.widget.CardView>

        </LinearLayout>









</LinearLayout>