<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151C25"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_margin="20dp"
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:src="@drawable/paytmlogo"
                    android:layout_margin="5dp"/>

            </androidx.cardview.widget.CardView>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="430dp"
                android:padding="20dp">


                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PayTm"
                            android:textSize="25dp"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/montserrat_alternates"/>
                        <RelativeLayout
                            android:id="@+id/rvname"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_below="@+id/image"
                            android:layout_width="match_parent"
                            android:background="@drawable/loginedit"
                            android:layout_height="50dp">



                            <LinearLayout
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_marginTop="3dp"
                                    app:srcCompat="@drawable/phone"
                                    android:padding="5dp"
                                    android:tint="#8F8C8C"
                                    android:id="@+id/user"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    />

                                <EditText
                                    android:layout_marginRight="7dp"
                                    android:id="@+id/idpaytm"
                                    android:paddingLeft="15dp"
                                    android:hint="Paytm Number"
                                    android:fontFamily="@font/nunito_semibold"
                                    android:textColor="@color/colormain"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:inputType="textEmailAddress"
                                    android:layout_toRightOf="@+id/user"
                                    android:background="@color/logincard"
                                    android:textSize="15sp"/>

                            </LinearLayout>



                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rvemail"
                            android:layout_marginLeft="30dp"
                            android:layout_marginRight="30dp"
                            android:layout_marginTop="20dp"
                            android:layout_below="@+id/image"
                            android:layout_width="match_parent"
                            android:background="@drawable/loginedit"
                            android:layout_height="50dp">



                            <LinearLayout
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_marginTop="3dp"
                                    app:srcCompat="@drawable/coins"
                                    android:padding="5dp"
                                    android:tint="#8F8C8C"
                                    android:id="@+id/email"
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    />

                                <EditText
                                    android:layout_marginRight="7dp"
                                    android:id="@+id/idpoint"
                                    android:paddingLeft="15dp"
                                    android:hint="Total Coin"
                                    android:fontFamily="@font/nunito_semibold"
                                    android:textColor="@color/colormain"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:inputType="textEmailAddress"
                                    android:layout_toRightOf="@+id/user"
                                    android:background="@color/logincard"
                                    android:textSize="15sp"/>

                                <EditText
                                    android:id="@+id/idemail2"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_toRightOf="@+id/email"
                                    android:layout_weight="1"
                                    android:background="@color/edittext"
                                    android:fontFamily="@font/nunito_semibold"
                                    android:hint="Email Id"
                                    android:inputType="textEmailAddress"
                                    android:paddingLeft="15dp"
                                    android:textColor="@color/colormain"
                                    android:textSize="15sp" />

                            </LinearLayout>



                        </RelativeLayout>

                        <TextView
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="200 coins = 1 rs."
                            android:textSize="13sp"
                            android:textColor="@color/match"
                            android:layout_marginLeft="25dp"/>


                        <TextView
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Minimum Redeem 5 Rs, 1000 coins."
                            android:textSize="13sp"
                            android:textColor="@color/match"
                            android:layout_marginLeft="25dp"/>

                        <TextView
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Payment Will Deliverd in week."
                            android:textSize="13sp"
                            android:textColor="@color/match"
                            android:layout_marginLeft="25dp"/>

                        <TextView
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_marginTop="3dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Do Not Cheating With us Otherwise Your Account Will Be Suspended."
                            android:textSize="13sp"
                            android:textColor="@color/match"
                            android:layout_marginLeft="25dp"/>


                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="80dp">

                            <Button
                                android:id="@+id/idgetpay"
                                android:background="@drawable/loginbt"
                                android:layout_marginLeft="35dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="35dp"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:textColor="@color/white"
                                android:textSize="15dp"
                                android:text="REQUEST"/>
                        </LinearLayout>



                    </LinearLayout>






                </androidx.cardview.widget.CardView>




            </LinearLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">



                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="10dp"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:src="@drawable/paytmlogo"/>

                            <TextView
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="15 Paytm Payot"
                                android:textSize="15dp"
                                android:textColor="#535151"
                                android:fontFamily="@font/nunito_bold"/>

                            <TextView
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="3000 coins"

                                android:fontFamily="@font/nunito_semibold"/>

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="10dp"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:src="@drawable/paytmlogo"/>

                            <TextView
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="20 Paytm Payot"
                                android:textSize="15dp"
                                android:textColor="#535151"
                                android:fontFamily="@font/nunito_bold"/>

                            <TextView
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="4000 coins"

                                android:fontFamily="@font/nunito_semibold"/>

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="10dp"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:src="@drawable/paytmlogo"/>

                            <TextView
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="35 Paytm Payot"
                                android:textSize="15dp"
                                android:textColor="#535151"
                                android:fontFamily="@font/nunito_bold"/>

                            <TextView
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="5500 coins"

                                android:fontFamily="@font/nunito_semibold"/>

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="10dp"
                        android:layout_width="200dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="10dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:src="@drawable/paytmlogo"/>

                            <TextView
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="50 Paytm Payot"
                                android:textSize="15dp"
                                android:textColor="#535151"
                                android:fontFamily="@font/nunito_bold"/>

                            <TextView
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="7000 coins"

                                android:fontFamily="@font/nunito_semibold"/>

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </HorizontalScrollView>





        </LinearLayout>


    </ScrollView>

</FrameLayout>