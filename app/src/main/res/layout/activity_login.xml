<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151C25"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <include
        android:visibility="gone"
        android:id="@+id/messege"
        layout="@layout/verifypackege"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:fontFamily="@font/loveloblack"
                android:gravity="center"
                android:textColor="@color/tab_enable"
                android:textSize="30dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:padding="20dp">


            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LOGIN"
                        android:textSize="25dp"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/montserrat_alternates"/>
                    <RelativeLayout
                        android:id="@+id/rvemail"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/image"
                        android:layout_width="match_parent"
                        android:background="@drawable/loginedit"
                        android:layout_height="50dp">



                        <LinearLayout
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_marginTop="3dp"
                                app:srcCompat="@drawable/user"
                                android:padding="5dp"
                                android:tint="#8F8C8C"
                                android:id="@+id/user"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                />

                            <EditText
                                android:layout_marginRight="7dp"
                                android:id="@+id/idemail"
                                android:paddingLeft="15dp"
                                android:hint="Email Id"
                                android:fontFamily="@font/nunito_semibold"
                                android:textColor="@color/colormain"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:inputType="textEmailAddress"
                                android:layout_toRightOf="@+id/user"
                                android:background="@color/logincard"
                                android:textSize="15sp"/>

                        </LinearLayout>



                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rvpass"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/image"
                        android:layout_width="match_parent"
                        android:background="@drawable/loginedit"
                        android:layout_height="50dp">



                        <LinearLayout
                            android:padding="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_marginTop="3dp"
                                app:srcCompat="@drawable/lock"
                                android:padding="5dp"
                                android:tint="#8F8C8C"
                                android:id="@+id/pass"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                />

                            <EditText
                                android:layout_marginRight="7dp"
                                android:id="@+id/idpass"
                                android:paddingLeft="15dp"
                                android:hint="Password"
                                android:fontFamily="@font/nunito_semibold"
                                android:textColor="@color/colormain"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:inputType="textEmailAddress"
                                android:layout_toRightOf="@+id/user"
                                android:background="@color/logincard"
                                android:textSize="15sp"/>

                        </LinearLayout>



                    </RelativeLayout>


                    <TextView
                        android:id="@+id/forgate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Forgate Password"
                        android:gravity="center"
                        android:clickable="true"
                        android:layout_marginTop="10dp"
                        android:textSize="15dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <Button
                            android:id="@+id/btnLoging"
                            android:background="@drawable/loginbt"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="45dp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:text="Login"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="80dp">

                        <Button
                            android:id="@+id/btnRegister"
                            android:background="@drawable/singbt"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="45dp"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:text="Creat New Account"/>
                    </LinearLayout>



                </LinearLayout>






            </androidx.cardview.widget.CardView>




        </LinearLayout>







    </LinearLayout>

</ScrollView>



</LinearLayout>