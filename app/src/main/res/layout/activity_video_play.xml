<?xml version="1.0" encoding="utf-8"?>
<com.luolc.emojirain.EmojiRainLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151C25"
    android:orientation="vertical"
    android:id="@+id/group_emoji_container"

    tools:context="com.video.status_downloader.supernover.Video_play">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:gravity="center"
            android:layout_centerInParent="true"
            android:id="@+id/idadmob"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <VideoView

                    android:id="@+id/video_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"

                    tools:ignore="RtlCompat" />

            </LinearLayout>


            <ProgressBar
                android:id="@+id/progressbar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="end"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    >

                    <ImageView
                        android:id="@+id/coinn"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="12dp"
                        android:src="@drawable/timer"
                        tools:ignore="RtlCompat" />

                    <LinearLayout
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_bold"
                            android:text="00:20"
                            android:textColor="@color/white"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            tools:ignore="RtlCompat" />
                    </LinearLayout>



                    <ImageView
                        android:id="@+id/rupee"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignStart="@+id/coinn"
                        android:src="@drawable/coin"
                        tools:ignore="RtlCompat" />
                </RelativeLayout>

                <Button
                    android:id="@+id/share"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/ic_share"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:backgroundTint="#D50000"
                    />

                <Button
                    android:id="@+id/download"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/down"
                    android:onClick="download_Click"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    />



            </LinearLayout>






        </RelativeLayout>
    </LinearLayout>






</com.luolc.emojirain.EmojiRainLayout>